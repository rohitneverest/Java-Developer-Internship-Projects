<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="all" spacing="8" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.chat.javachatapplication.client.ChatController">

    <Label prefHeight="23.0" prefWidth="479.0" style="-fx-font-size:16px; -fx-font-weight:bold;" text="JavaFX Chat Client" textFill="#1600a8" />

    <TextArea id="textareacss" fx:id="chatArea" editable="false" prefHeight="350" wrapText="true" />

    <HBox spacing="8">
        <TextField id="promptid" fx:id="messageField" prefHeight="24.0" prefWidth="429.0" promptText="Type message here... (Enter to send)" HBox.hgrow="ALWAYS" />
        <Button onAction="#onSend" prefHeight="24.0" text="Send" />
    </HBox>

    <HBox id="hboxid" spacing="8">
        <Label text="Commands:" />
        <!-- escaped < > -->
        <Label text="/msg &lt;user&gt; &lt;text&gt; (private)" />
        <Label text="/encrypt on|off" />
        <Label text="/quit" />
    </HBox>

</VBox>
